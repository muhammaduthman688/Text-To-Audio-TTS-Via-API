<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="20dp"

        android:textSize="18sp" />

    <Button
        android:id="@+id/speakButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/speakButton"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click a button to change voice"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <!-- Buttons to change voices -->
        <Button
            android:id="@+id/btnVoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 1"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnVoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 2"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnVoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 3"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnVoice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice 4"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>